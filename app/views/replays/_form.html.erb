<%= form_for [@project, @commentable, @comment,@replay],  html: { multipart: true } do |f| %>

    <%= render 'shared/error_messages', object: @comment  %>
    <div class="form-group">
      <%= f.text_area :content, rows: 8, class: 'form-control' %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-10 ">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
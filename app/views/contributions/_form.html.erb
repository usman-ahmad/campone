<%= form_for [@project, @contribution], html: {role: "form", class: 'form-inline'} do |f| %>
    <% if @contribution.new_record? %>
        <div class="form-group mg-r10">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group mg-r10">
          <%= f.label :name  %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
    <% else %>
        <div class="form-group mg-r10">
          <label>Email: </label>
          <%= @contribution.user.email %>
        </div>
        <div class="form-group mg-r10">
          <label>Initials: </label>
          <%= @contribution.initials %>
        </div>
    <% end %>
    <div class="form-group mg-r10">
      <%= f.label :role, 'Role:' %>
      <%= f.select :role, options_for_select(Contribution::ROLES.values - ['Owner'], selected: @contribution.role), {}, class: "form-control" %>
    </div>
    <%= f.submit @contribution.new_record? ? "Invite" : "Update", class: "btn btn-success" %>
<% end %>

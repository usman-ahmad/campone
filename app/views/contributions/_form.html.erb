<%= form_for [@project, @contribution], html: {role: "form", class: 'form-inline'} do |f| %>
    <div class="form-group mg-r10">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group mg-r10">
      <%= f.label :role %>
      <%= f.select :role, options_for_select(Contribution::ROLES.values, selected: @contribution.role), {}, class: "form-control" %>
    </div>
    <%= f.submit @contribution.new_record? ? "Invite" : "Update", class: "btn btn-success" %>
<% end %>

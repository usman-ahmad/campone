<% if @contributions.present? %>
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-md-4">Email</th>
      <th class="col-md-2">Role</th>
      <th class="col-md-2">Status</th>
      <th class="col-md-3">Actions</th>
    </tr>
    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.user.email %></td>
        <td><%= "#{contribution.role}" if contribution.role %></td>
        <td>...</td>
        <td>
          <%= link_to 'Delete', project_contribution_path(@project, contribution), method: :delete, data: {confirm: 'Are you sure?'} %> -
          <%= link_to 'Resend Invitation', resend_invitation_project_contribution_path(@project, contribution), method: :post %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="text-center">No Contributions Found.</p>
<% end %>

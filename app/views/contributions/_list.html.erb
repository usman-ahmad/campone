<% if @contributions.present? %>
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-md-3">Email</th>
        <th class="col-md-1">Role</th>
        <th class="col-md-1">Status</th>
        <th class="col-md-3">Actions</th>
      </tr>
      <% @contributions.each do |contribution| %>
          <tr>
            <td><%= contribution.user.email %></td>
            <td><%= "#{contribution.role}" if contribution.role %></td>
            <td><%= joined_status(contribution) %></td>
            <td>
              <%= button_to 'Delete', project_contribution_path(@project, contribution), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default', form: {style: 'display: inline-block;'} %>
              <%= link_to 'Edit', edit_project_contribution_path(@project, contribution), class: 'btn btn-default' %>
              <%= button_to 'Resend Invitation', resend_invitation_project_contribution_path(@project, contribution), method: :post, class: 'btn btn-default', form: {style: 'display: inline-block;'} unless contribution.user.invitation_accepted? %>
            </td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p class="text-center">No Contributions Found.</p>
<% end %>

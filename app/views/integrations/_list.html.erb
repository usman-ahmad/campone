<% if @integrations.present? %>
    <table class="table table-striped table-bordered table-hover integration-list-table">
      <tr>
        <th class="col-md-1">Type</th>
        <th class="col-md-2">Title</th>
        <th class="col-md-7">Url</th>
        <th class="col-md-2">Actions</th>
      </tr>
      <% @integrations.each do |integration| %>
          <tr>
            <td class="text-center">
              <span class="label label-default label-social btn-<%= integration.name %> label-<%= integration.name %>">
                <%= image_tag ("#{integration.name}.png") %>
                <%= integration.name.capitalize %>
              </span>
            </td>
            <td><%= integration.title %></td>
            <td><%= integration.url %></td>
            <td>
              <% if integration.name == 'jira' # TODO: FIX     %>
                  <%= link_to 'Configure', project_integration_path(@project, integration) %> -
              <% end %>
              <%= link_to 'Delete', project_integration_path(@project, integration), method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p class="text-center">No Integration Found.</p>
<% end %>

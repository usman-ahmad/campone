<% content_for(:tab_nav) do %>
  <%= render 'shared/tab_nav', project: project, active: 'settings' %>
<% end %>

<div class='custom-tab-container'>
  <%= render 'shared/settings_tab', project: project, class_name: 'active', active: 'integrations' %>

  <div class='col-lg-9 col-md-9 col-sm-9 col-xs-9 custom-tab'>
    <div class='custom-tab-content active'>
      <div class='tab-content-header'>
        <h3 class='heading-3 text-capitalize'><%= params[:name] %> Integration</h3>

        <div class='pull-right'>
          <%= link_to list_project_integrations_path(project, name: integration.name), class: 'btn btn-primary' do %>
            <span class='glyphicon glyphicon-arrow-left'></span>
            Back
          <% end %>
        </div>
      </div>

      <hr>
      <div class="col-md-12">
        <div class="col-md-12 mg-b10">
          <%= form_for([project, integration.becomes(Integration)], html: {role: "form", class: "form-horizontal"}) do |f| %>

            <div class="form-group">
              <%= f.label :active, class: "col-md-2" %>
              <div class="col-md-2">
                <%= f.check_box :active, class: "col-md-2 checkbox" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :title, class: "col-md-2" %>
              <div class="col-md-10">
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>

            <%= yield f %>

            <%= f.submit 'Save Changes', class: "btn btn-success pull-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

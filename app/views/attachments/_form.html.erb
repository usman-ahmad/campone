<%= form_for([@project, @attachment], html: {class: 'form-horizontal', role: 'form', multipart: true}) do |f| %>

    <%= render 'shared/error_messages', object: @attachment %>

    <div class="col-md-offset-4 col-md-4">
      <div class="form-group">
        <%= f.label :title, class: 'custom-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'custom-label' %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>

      <% if @attachment.persisted? %>
          <div class="form-group">
            <%= f.label :attachment_name, class: 'custom-label' %>
            -
            <span class="key"><%= @attachment.attachment_file_name %></span>
            <%= f.text_field :attachment_name, class: 'form-control', placeholder: 'File Name' %>
          </div>
      <% elsif @attachment.new_record? %>
          <div class="form-group">
            <%= f.file_field :attachment, type: :file %>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.submit class: 'btn btn-primary pull-right' %>
      </div>
    </div>
<% end %>

<div class="clearfix"></div>

<%= form_for([@project, @task], html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'groups/select_or_create_group', form_builder: f, resource: @task  %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.select :priority, Task.priorities.keys, { include_blank: "None" }, { class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :due_at, { include_blank: true }, class: 'input-sm'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 col-md-offset-2 ">
      <%= render 'attachments/browse_attachments' %>
    </div>
  </div>l

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

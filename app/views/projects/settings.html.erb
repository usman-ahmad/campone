<% content_for(:tab_nav) do %>
    <%= render 'shared/tab_nav', project: @project, active: '' %>
<% end %>
<div class='custom-tab-container'>
  <%= render 'settings_tab', project: @project, class_name:'active', active:'set' %>

  <div class='col-lg-9 col-md-9 col-sm-9 col-xs-9 custom-tab'>
    <div class='custom-tab-content active'>
      <div class='tab-content-header'>
        <h3 class='heading-3'>Project Settings</h3>

        <div class='pull-right'>
          <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
              <span class='glyphicon glyphicon-pencil'></span>
              Edit
          <% end %>

          <% if can? :destroy, @project %>
              <button type='button' class='btn btn-danger' data-toggle='modal' data-target='#myModal'>
                <span class='glyphicon glyphicon-trash'></span> Delete
              </button>
              <%= render 'projects/delete_project_modal', project: @project %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class='col-md-2'>
        <h5>Title:</h5>

        <p><%= @project.title %></p>
      </div>
      <div class='col-md-2'>
        <h5>Owner:</h5>

        <p><%= @project.owner.name %></p>
      </div>
      <div class='col-md-8'>
        <h5>Description:</h5>

        <p><%= @project.description %></p>
      </div>
    </div>
  </div>
</div>

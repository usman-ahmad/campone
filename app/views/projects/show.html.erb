<% content_for(:tab_nav) do %>
    <%= render 'shared/tab_nav', project: @project, active: 'settings' %>
<% end %>

<div class="col-md-12 form-group">
  <div class="row">
    <div class="col-md-2">
      <h5>Name:</h5>

      <p><%= @project.name %></p>
    </div>
    <div class="col-md-2">
      <h5>Owner:</h5>

      <p><%= @project.owner.name %></p>
    </div>
    <div class="col-md-7">
      <h5>Description:</h5>

      <p><%= @project.description %></p>
    </div>
    <div class="col-md-1">
      <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
      <% end %>

    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="page-header">
    <h2>Users</h2>
  </div>
  <div class="col-md-8">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-md-4">Email</th>
        <th class="col-md-2">Role</th>
        <th class="col-md-2">Status</th>
        <th class="col-md-3">Actions</th>
      </tr>
      <% @contributions.each do |i| %>
          <tr>
            <td><%= i.user.email %></td>
            <td><%= "#{i.role}" if i.role %></td>
            <td>...</td>
            <td>
              <a>Edit</a> -
              <a>Remove</a> -
              <a>Resend Invitation</a>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-4">
    <%= form_tag(project_contributions_path(@project), class: "form-horizontal", method: "post") do %>
        <div class="form-group">
          <%= label_tag :email, "Email", class: "col-md-2" %>
          <div class="col-md-10">
            <%= text_field_tag :email, "", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :role, "Role", class: "col-md-2" %>
          <div class="col-md-10">
            <%= select_tag :role, options_for_select(Contribution::ROLES.values), class: 'form-control' %>
          </div>
        </div>
        <%= submit_tag "Invite", class: "btn btn-success pull-right" %>
    <% end %>
  </div>
  <div class="clearfix"></div>
  <div class="page-header">
    <h2>Integrations</h2>
  </div>
  <div class="col-md-8">
    <% if @integrations.present? %>
        <table class="table table-striped table-bordered table-hover">
          <tr>
            <th class="col-md-2">Name</th>
            <th class="col-md-8">Url</th>
            <th class="col-md-2">Actions</th>
          </tr>
          <% @integrations.each do |integration| %>
              <tr>
                <td><%= integration.name %></td>
                <td><%= integration.url %></td>
                <td>
                  <% if integration.name == 'jira' %>
                      <%= link_to 'Configure', project_integration_path(@project, integration) %> -
                  <% end %>
                  <%= link_to 'Delete', project_integration_path(@project, integration), method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
              </tr>
          <% end %>
        </table>
    <% else %>
        <p class="text-center">No Integration Found.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= render 'integrations/form' %>
  </div>
  <div class="clearfix"></div>
  <%= link_to "Configure Twitter account to receive notification tweets", user_twitter_omniauth_authorize_path(params: {project_id: @project.id}) %>
  <br/>
  <%= link_to "Integrate Asana account and import your tasks", user_asana_omniauth_authorize_path(params: {project_id: @project.friendly_id}) %>
  <br/>
  <%= link_to "Integrate Trello account and import your tasks", user_trello_omniauth_authorize_path(params: {project_id: @project.friendly_id}) %>
  <br/>
</div>

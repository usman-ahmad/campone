<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show project</h1>
</div>

<dl class="dl-horizontal">
  <dt>Group:</dt>
  <dd><%= @project.project_group.try(:name) || 'Not Specified' %></dd>

  <dt>Name:</dt>
  <dd><%= @project.name %></dd>

  <dt>Description:</dt>
  <dd><%= @project.description %></dd>

  <dt>Owner:</dt>
  <dd><%= @project.owner_id %></dd>

  <br>
  <%= link_to new_project_task_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Add Todo
  <% end %>

  <%= link_to project_tasks_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list"></span>
    Tasks
  <% end %>
  <%= link_to project_discussions_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list"></span>
    Discussions
  <% end %>
  <%= link_to project_attachments_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list"></span>
    Files
  <% end %>
  <%= link_to new_project_contribution_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-user"></span>
    Manage Invitations
  <% end %>
  <%= link_to project_events_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-user"></span>
    Calender
  <% end %>
</dl>

<%= form_for(@project, html: {role: "form", class: "form-horizontal"}) do |f| %>
    <div class="container-fluid">
      <%= render 'shared/error_messages', object: @project %>

      <%= render 'groups/select_or_create_group', form_builder: f, resource: @project %>

      <div class="form-group">
        <%= f.label :name, class: "col-md-2 control-label" %>
        <div class="col-md-10" placeholder="Software X, Yosemite">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-md-2 control-label" %>
        <div class="col-md-10" placeholder="Project Description">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.submit class: "btn btn-info" %>
      </div>
    </div>
<% end %>

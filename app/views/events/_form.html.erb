<%= form_for([@project, @event], html: { class: "form-horizontal", role: "form", multipart: true, remote: true }) do |f| %>

  <%= render 'shared/error_messages', object: @event  %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_at, class: "col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :due_at, class: 'form-control date_picker' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= form_for([@project, @discussion], html: { class: "form-horizontal", role: "form" , multipart: true}) do |f| %>
  <% if @discussion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@discussion.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
        <% @discussion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'groups/select_or_create_group', form_builder: f, resource: @discussion  %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :private, class: "col-sm-2 control-label" %>
    <div>
      <%= f.check_box :private%>
    </div>
  </div>

  <div class="form-group">
    <%= f.fields_for :user_discussions do |f| %>
      <%= f.label :user_id, f.object.user.email %>
      <%= f.hidden_field :user_id%>
      <%= f.check_box :notify %>
      <%= f.label :notify, 'Notify? ' %>
      <%= f.label :_destroy, 'Exclude?'%>
      <%= f.check_box :_destroy %><br>
    <% end %>
  </div>

  <%= file_field_tag "attachments_array[]", type: :file, multiple: true %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

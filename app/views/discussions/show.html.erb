<div class="page-header">
  <%= link_to project_discussions_path(@project), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_project_discussion_path(@project ,@discussion), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show Task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @discussion.title %></dd>

  <dt>Description:</dt>
  <dd><%= @discussion.content %></dd>

  <dt>Private:</dt>
  <dd><%= @discussion.private %></dd>

  <br>
  <%= link_to new_project_discussion_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Add Todo
  <% end %>

  <%= link_to project_discussions_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list"></span>
    List all Discussions
  <% end %>
</dl>

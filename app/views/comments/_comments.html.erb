<h2>Comments</h2>

<div id="comments">
  <% @comments.each do |comment| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= comment.user.email %></strong> <span class="text-muted"><%= distance_of_time_in_words(Time.current, comment.created_at) %> ago </span>
      <%= link_to 'Edit', edit_project_task_comment_path(@project, @commentable,comment)%>
      </div>
      <div class="panel-body comment">
        <%= simple_format comment.content %>
      </div>

      <%= render 'attachments/list_attachments', resource: comment %>
    </div>
  <% end %>
</div>